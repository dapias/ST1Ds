##Box-muller transformation to generate q and p
##Recall that rho(p,q,S) = exp(-¦Â*(p^2/2 + q^2/2))/(2*¦Ð*¦Â)*f(S)

function initcond(beta::Float64)
    sigma = 1./sqrt(beta)
    u1 = rand()
    u2 = rand()

    p = sqrt(-2*log(u1))*cos(2*pi*u2)
    q = sqrt(-2*log(u1))*sin(2*pi*u2)

    p = p*sigma
    q = q*sigma
end

    
